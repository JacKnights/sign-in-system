extends layout

block content

  link(rel='stylesheet', href='stylesheets/detail.css')

  h1 用户详情

  if message   
    div.message!= message

  form(method="post" id="board")
    p(class="detail") 用户名：#{user.username}
      
    p(class="detail") 学号：#{user.studentID}
      
    p(class="detail") 电话：#{user.phone}
      
    p(class="detail") 邮箱：#{user.email}
         
    div(id="btn-container")
      input(type="submit" id="signout" value="退出")

  script(type="text/javascript" src="javascripts/jquery.js")
  script(type="text/javascript" src="javascripts/detail.js")